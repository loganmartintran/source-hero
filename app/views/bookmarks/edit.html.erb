<div class="container">
  <div class="text-center">
  <h1>Edit Bookmark</h1>
  <%= form_for [@topic, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Bookmark name", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
  <%= button_to "Delete bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this bookmark?"} %>
  </div>
