<div class="text-center">
  <div class="col-md-6 text-center">
  <h1>Edit Bookmark</h1>
  <%= form_for [@topic, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Bookmark name", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
