<div class="container text-center">
  <div>
  <h1>Topics</h1>
    <div>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  </div>
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic %><br>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
